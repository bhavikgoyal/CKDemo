 @model IEnumerable<ChossonKallah.Models.StatesClass> 
 
 



<script>
		 $(document).ready(function () {
			 var mydata = $('#RawDatas').parent('td').html();
			 $('#RawDatas').parent().parent().parent().parent('table').replaceWith(mydata);
		 
			 $("#AddressBookToggleAll").change(function () {
				 if ($(this).is(':checked')) {
					 $("input.k-checkbox[type=checkbox]").each(function () {
						 $(this).attr('checked', true);
					 }); 
				 } else {
					 $("input.k-checkbox[type=checkbox]").each(function () {
						  $(this).attr('checked', false);
					 });
				 }
			 }); 
		 }); 
 </script>
 


 
  


 
		 <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" >
			 <tr>
				 <th>
				 </th>
				 <th >
					 @Html.DisplayNameFor(model => model.Statename)
				 </th>
				 <th >
					 @Html.DisplayNameFor(model => model.Countryid)
				 </th>
				 <th >
					 @Html.DisplayNameFor(model => model.Isactive)
				 </th>
				 <th >
					 @Html.DisplayNameFor(model => model.Isdeleted)
				 </th>
				 <th >
					 @Html.DisplayNameFor(model => model.Createdon)
				 </th>
				 <th >
					 @Html.DisplayNameFor(model => model.Deletedon)
				 </th>
				 <th>Action</th>
			 </tr>
		 @foreach (var item in Model) {
			 <tr>
				 <td>
					 @Html.HiddenFor(model => item.Stateid)
				 </td>
				 <td >
					 @Html.DisplayFor(model => item.Statename)
				 </td>
				 <td >
					 @Html.DisplayFor(model => item.Countryid)
				 </td>
				 <td >
					 @Html.DisplayFor(model => item.Isactive)
				 </td>
				 <td >
					 @Html.DisplayFor(model => item.Isdeleted)
				 </td>
				 <td >
					 @Html.DisplayFor(model => item.Createdon)
				 </td>
				 <td >
					 @Html.DisplayFor(model => item.Deletedon)
				 </td>
				 <td><a class="btn btn-info" style="padding:2px 7px; margin:2px;" href="/States/Edit?Stateid=@item.Stateid "><i class="halflings-icon white edit"></i></a>  
				 <a class="btn btn-success" style="padding:2px 7px; margin:2px;" href="/States/Details?Stateid=@item.Stateid "><i class="halflings-icon white zoom-in"></i></a>  
				 <a class="btn btn-danger" style="padding:2px 7px; margin:2px;" href="/States/Delete?Stateid=@item.Stateid" onclick="return confirm('Are you sure you want to delete this record.'); "><i class="halflings-icon white trash"></i></a> </td>
			 </tr>
		 }
		 </table>
		 
	 


 

   
